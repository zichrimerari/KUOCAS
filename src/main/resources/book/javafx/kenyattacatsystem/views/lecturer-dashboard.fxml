<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="book.javafx.kenyattacatsystem.controllers.LecturerDashboardController"
            prefHeight="768.0" prefWidth="1024.0" styleClass="dashboard-container">
    
    <!-- Left Sidebar with Icon Navigation -->
    <left>
        <VBox styleClass="sidebar" alignment="TOP_CENTER" spacing="30.0" prefWidth="80.0">
            <padding>
                <Insets top="20.0" bottom="20.0"/>
            </padding>
            
            <!-- App Logo -->
            <FontIcon iconLiteral="fas-graduation-cap" iconSize="36" styleClass="sidebar-icon-active"/>
            
            <!-- Navigation Icons -->
            <FontIcon fx:id="dashboardIcon" iconLiteral="fas-home" iconSize="24" styleClass="sidebar-icon-active" onMouseClicked="#showDashboard"/>
            <FontIcon fx:id="assessmentsIcon" iconLiteral="fas-tasks" iconSize="24" styleClass="sidebar-icon" onMouseClicked="#showAssessments"/>
            <FontIcon fx:id="analyticsIcon" iconLiteral="fas-chart-line" iconSize="24" styleClass="sidebar-icon" onMouseClicked="#showAnalytics"/>
            <FontIcon fx:id="reportsIcon" iconLiteral="fas-chart-bar" iconSize="24" styleClass="sidebar-icon" onMouseClicked="#showReports"/>
            
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Settings and Logout -->
            <FontIcon fx:id="settingsIcon" iconLiteral="fas-cog" iconSize="24" styleClass="sidebar-icon" onMouseClicked="#showSettings"/>
            <FontIcon fx:id="logoutIcon" iconLiteral="fas-sign-out-alt" iconSize="24" styleClass="sidebar-icon" onMouseClicked="#handleLogout"/>
        </VBox>
    </left>
    
    <!-- Main Content Area -->
    <center>
        <StackPane>
            <!-- Dashboard Content (Units View) -->
            <VBox fx:id="dashboardContent" spacing="20.0" visible="true">
                <padding>
                    <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
                </padding>
                
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <Text fx:id="welcomeText" styleClass="header-text" text="Welcome, Lecturer"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="dateTimeLabel" styleClass="date-time-label" text="March 21, 2025 | 14:54"/>
                </HBox>
                
                <!-- Units Container -->
                <Text styleClass="subtitle-text" text="Your Units"/>
                <FlowPane fx:id="unitCardsContainer" hgap="20.0" vgap="20.0" VBox.vgrow="ALWAYS" 
                          style="-fx-background-color: #f0f0f0; -fx-min-height: 300px; -fx-padding: 10px;"/>
            </VBox>
            
            <!-- Assessments Content -->
            <VBox fx:id="assessmentsContent" spacing="20.0" visible="false">
                <padding>
                    <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
                </padding>
                
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <Text styleClass="header-text" text="Assessments"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="unitFilterComboBox" promptText="Filter by Unit"/>
                </HBox>
                
                <!-- Assessments Table -->
                <TableView fx:id="assessmentsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Title" prefWidth="150"/>
                        <TableColumn text="Unit" prefWidth="100"/>
                        <TableColumn text="Date" prefWidth="100"/>
                        <TableColumn text="Duration" prefWidth="80"/>
                        <TableColumn text="Status" prefWidth="80"/>
                        <TableColumn text="Actions" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Reports Content -->
            <VBox fx:id="reportsContent" spacing="20.0" visible="false">
                <padding>
                    <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
                </padding>
                
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <Text styleClass="header-text" text="Proctoring Violations"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="proctoringUnitFilterComboBox" promptText="Filter by Unit"/>
                    <ComboBox fx:id="proctoringTimeFilterComboBox" promptText="Time Period"/>
                </HBox>
                
                <!-- Proctoring Violations Description -->
                <VBox fx:id="reportDescriptionsContainer" spacing="10.0" VBox.vgrow="NEVER">
                    <!-- This will be populated dynamically in the controller -->
                </VBox>
                
                <!-- Proctoring Violations Table -->
                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Text styleClass="subtitle-text" text="Violations List"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="proctoringTotalViolationsLabel" text="Total Violations: 0" styleClass="info-label"/>
                    </HBox>
                    <TableView fx:id="proctoringViolationsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn text="Student" prefWidth="150"/>
                            <TableColumn text="Assessment" prefWidth="200"/>
                            <TableColumn text="Unit" prefWidth="80"/>
                            <TableColumn text="Start Time" prefWidth="150"/>
                            <TableColumn text="Duration" prefWidth="100"/>
                            <TableColumn text="Severity" prefWidth="80"/>
                        </columns>
                        <placeholder>
                            <Label text="No proctoring violations detected"/>
                        </placeholder>
                    </TableView>
                </VBox>
            </VBox>
            
            <!-- Analytics Content -->
            <VBox fx:id="analyticsContent" spacing="10.0" visible="false" VBox.vgrow="ALWAYS">
                <!-- The analytics content will be loaded dynamically from lecturer-performance-view.fxml -->
            </VBox>
            
            <!-- Settings Content -->
            <VBox fx:id="settingsContent" spacing="20.0" visible="false">
                <padding>
                    <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
                </padding>
                
                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <Text styleClass="header-text" text="Settings"/>
                </HBox>
                
                <!-- Settings Form -->
                <GridPane vgap="10" hgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300"/>
                    </columnConstraints>
                    
                    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Current Password:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <PasswordField fx:id="currentPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="New Password:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    
                    <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                    <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                    
                    <Button text="Save Changes" styleClass="primary-button" onAction="#handleSaveSettings" 
                            GridPane.columnIndex="1" GridPane.rowIndex="7" GridPane.halignment="RIGHT"/>
                </GridPane>
            </VBox>
        </StackPane>
    </center>
    
    <!-- Status Bar -->
    <bottom>
        <HBox styleClass="footer" alignment="CENTER_LEFT" spacing="10.0">
            <padding>
                <Insets top="5.0" right="10.0" bottom="5.0" left="10.0"/>
            </padding>
            <Label fx:id="statusLabel" text="Ready"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="versionLabel" text="Version 1.0"/>
        </HBox>
    </bottom>
</BorderPane>
